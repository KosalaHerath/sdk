<?xml version="1.0" encoding="utf-8" standalone="no"?>
<installer-script minSpecVersion="1.000000">
    <title>WSO2 Cellery __CELLERY_VERSION__</title>
    <background mime-type="image/png" file="dialog.png"/>
    <welcome file="welcome.html" mime-type="text/html" />
    <conclusion file="conclusion.html" mime-type="text/html" />
    <options customize="never" allow-external-scripts="no"/>
    <domains enable_localSystem="true" />
    <installation-check script="installCheck();"/>
    <script>
function installCheck() {
    if(!(system.compareVersions(system.version.ProductVersion, '10.6.0') >= 0)) {
        my.result.title = 'Unable to install';
        my.result.message = 'Cellery requires Mac OS X 10.6 or later.';
        my.result.type = 'Fatal';
        return false;
    }
    if(system.files.fileExistsAtPath('/Library/Cellery/cellery)) {
        my.result.title = 'Previous Installation Detected';
        my.result.message = 'A previous installation of Cellery-__CELLERY_VERSION__ exists at /Library/Cellery/. This installer will remove the previous installation prior to installing. Please back up any data before proceeding.';
        my.result.type = 'Warning';
        return false;
    }
    return true;
}
    </script>
    <choices-outline>
        <line choice="wso2am"/>
    </choices-outline>
    <choice id="wso2am" title="__CELLERY_VERSION__">
        <pkg-ref id="wso2am.pkg"/>
    </choice>
    <pkg-ref id="wso2am.pkg" auth="Root">wso2am.pkg</pkg-ref>
</installer-script>
